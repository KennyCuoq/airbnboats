          <div class="show-boat-picture" style="background-image: linear-gradient(-225deg, rgba(0,90,70,0.3) 0%, rgba(0,36,61,0.3) 50%), url(<%= cl_image_path @boat.photo %>);">
            <div class="picture-content">
              <h2><%= @boat.name.capitalize %></h2>
              <p><%= @boat.boat_type %></p>
              <p>
                <span id="banner-typed-text"></span>
