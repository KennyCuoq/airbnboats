<!-- <p>"Boat image in the background"</p> -->

<h1 class="class70px"></h1>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/932638/pexels-photo-932638.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
  <div class="banner-form">
    <h1><%= @boat.name %></h1>

    <ul>
      <li>Boat type: <%= @boat.boat_type %></li>
      <li>Description: <%= @boat.description %></li>
      <li>Location: <%= @boat.location %></li>
      <li>Daily price: <%= @boat.daily_price %></li>
      <li>Capacity: <%= @boat.capacity %></li>
      <li>Crew number: <%= @boat.crew_number %></li>
    </ul>
  </div>

  <div class="banner-form">
    <h1> Book an appointment </h1>
    <div>
      <%= simple_form_for([@boat, @booking]) do |f| %>
        <div class="date-container">
          <div>
            <%= f.input :start_date, placeholder: "Start date", input_html: {class: "transparent-input" } %>
          </div>
          <div>
            <%= f.input :end_date, placeholder: "End date", input_html: {class: "transparent-input" } %>
          </div>
        </div>
        <%= f.input :passenger_number, placeholder: "Number of passengers", input_html: {class: "transparent-input" } %>
        <%= f.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
