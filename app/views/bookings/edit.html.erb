<div class="container">
  <div class="row">

      <%= render 'shared/boat-profile' %>

      <div class="col-xs-12 col-sm-4" id="booking-confirm-box">
        <div class="booking-confirm">
          <h3>Booking overview</h3>
          <h4>Booking status: <%= @booking.status %></h4>
          <p> booking details:</p>
          <ul>
            <li><p><em>Start date</em>: <%= @booking.start_date %></p></li>
            <li><p><em>End date</em>: <%= @booking.end_date %></p></li>
            <li><p><em>Number of passengers</em>: <%= @booking.passenger_number %></p></li>
            <li><p><em>Total price</em>: <%= @booking.total_price %></p></li>
          </ul>
        </div>
        <div class="booking-form">
          <%= simple_form_for([@boat, @booking]) do |f| %>
          <div class="date-container">
            <div>
              <%= f.input :start_date, placeholder: "Start date", input_html: {class: "transparent-input" } %>
            </div>
            <div>
              <%= f.input :end_date, placeholder: "End date", input_html: {class: "transparent-input" } %>
            </div>
          </div>
          <%= f.input :passenger_number, placeholder: "Number of passengers", input_html: {class: "transparent-input" } %>
          <%= f.submit class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
